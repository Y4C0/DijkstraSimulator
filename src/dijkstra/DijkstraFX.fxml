<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainAnchor" prefHeight="280.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dijkstra.DijkstraController">
   <children>
      <AnchorPane fx:id="anchor" layoutY="80.0" prefHeight="200.0" prefWidth="280.0" />
      <VBox prefHeight="77.0" prefWidth="280.0">
         <children>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="280.0">
               <children>
                  <Button fx:id="btnFindPath" mnemonicParsing="false" onAction="#findPath" text="Find path">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#reset" text="Reset">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="280.0">
               <children>
                  <Label text="Width:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="fldWidth" alignment="CENTER" prefHeight="25.0" prefWidth="44.0" text="8">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Label text="Height:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="fldHeight" alignment="CENTER" prefHeight="25.0" prefWidth="44.0" text="8" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
